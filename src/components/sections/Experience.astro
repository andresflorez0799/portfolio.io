---
import Section from "../Section.astro";

import { work } from "@cv";
---

<Section title="Experiencia laboral">
    <ul>
        {
            work.map(({ name, startDate, endDate, position, summary, highlights, url }) => {
                const startYear = new Date(startDate).getFullYear();
                const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual";
                const years = `${startYear} - ${endYear}`;

                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>
                                        <a href={url} title={`Ver ${name}`} target="_blank">
                                            {name}
                                        </a>
                                    </h3>
                                    <h4>{position}</h4>
                                </div>

                                <time>{years}</time>
                            </header>
                            <hr />
                            <footer>
                                <p>{summary}</p>
                                {highlights.map((highlight: String) => {
                                    return <span class="no-print">{highlight}</span>;
                                })}
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
        text-decoration: underline;
    }

    article a {
        color: #111;
    }

    article a:hover {
        text-decoration: underline;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        color: #555;
        font-size: 0.85rem;
        min-width: 102px;
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer span {
        border-radius: 0px;
        background: #eee;
        color: #222222;
        font-size: 0.53rem;
        font-weight: 500;
        padding: 0.15rem 0.3rem;
        border-radius: 2.5px;
    }

    @media (width <= 700px) {
        time {
            text-align: right;
        }
    }
</style>
